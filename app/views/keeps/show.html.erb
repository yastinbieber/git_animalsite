<div class="contents-box">
  <div class="contents__post">
    <div class="content__post">
      <p><%= image_tag 'mypage.png' %></p>
      <a href="/users/<%= @keep.user_id %>">
        <p>@<%= @keep.user.nickname %></p>
      </a>
    </div>
    <div class="content__pic" style="background-image: url(<%= @keep.image %>);">
      <div class="content__p-text">
        <p>エリア：<%= simple_format(@keep.area) %></p><br>
        <p>種類：<%= simple_format(@keep.kind) %></p><br>
        <p>性別：<%= simple_format(@keep.gender) %></p><br>
        <p>首輪：<%= simple_format(@keep.collar) %></p>
      </div> 
    </div>
    <div class="content__text">
      <p>@<%= @keep.user.nickname %></p>
      <a><%= @keep.text %></a>
    </div>
  </div>
  
  <div class="container"> 
    <% if current_user %>
      <%= form_tag("/keeps/#{@keep.id}/keepcomments", method: :post) do %>
        <textarea name="text" placeholder="コメントする" style="border:2px green dotted;" rows="2" cols="30"></textarea></br>
        <input type="submit" value="コメントを投稿する">
      <% end %>
    <% end %>
    <div class="comments">   
      <h4>＜コメント一覧＞</h4>
      <% if @keepcomments %>
        <% @keepcomments.each do |keepcomment| %>
          <p>
            <strong>@<%= link_to keepcomment.user.nickname, "/users/#{keepcomment.user_id}" %>：</strong>
            <%= keepcomment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>